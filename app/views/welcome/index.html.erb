<% provide(:title, 'Home') %>

<h1> RECOLLECT </h1>

<% if signed_in? %>
  <div class="row">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
        <%= render 'posts/form' %>

  <% if @posts.any? and current_user.admin? %>
    <h3> All Posts: </h3>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
  <% end %>
  </div>

  <div class="span8">
      <%= render 'shared/feed' %>
  </div>

<%else %>
  
  <span>ReCollect is an application for music-heads and people who are collecting records, if you have a big albums library, join us!</span>

<% end %>