<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @user.nick %></h1>
      <%= image_tag @user.profile_photo.url(:avatar) %>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %>:</h3>
    <% if @users.any? %>
      <ul class="users">
        <% @users.each do |user| %>
          <h4><%= link_to user.nick, user %></h4>
        <% end %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>