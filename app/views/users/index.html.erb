<h1>All Users:</h1>

<h3> There are <%= @users.count %> registered users. </h3>

<% if signed_in? %>
  <p>
    <%= search_form_for @search do |f| %>
      <div class="field">
        <%= f.label :nick_cont, "Nick:" %>
        <%= f.text_field :nick_cont %>
      </div>
      <div class="actions"><%= f.submit "Search" %></div>
    <% end %>
  </p>
<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nick</th>
      <th>Email</th>
      <th>location</th>
      <th>name</th>
      <th>Country</th>
      <th>Age</th>
      <% if signed_in? and current_user.admin? %>
        <th>Admin</th>
        <th>Settings</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.nick %></td>
        <td><%= user.email %></td>
        <td><%= user.location %></td>
        <td><%= user.name %></td>
        <td><%= user.country %></td>
        <td><%= user.age %></td>
        <% if signed_in? and current_user.admin? %>
          <td><%= user.admin %></td>
          <td>
            <button class="btn btn-mini btn-block"><%= link_to 'Show', user %></button>
            <button class="btn btn-mini btn-block"><%= link_to 'Edit', edit_user_path(user) %></button>
            <button class="btn btn-mini btn-block"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if signed_in? and current_user.admin? %>
  <button class="btn"><%= link_to 'Back to Admin Panel', admin_path %></button>
  <button class="btn"><%= link_to 'Add New User', new_user_path %></button>
<% end %>