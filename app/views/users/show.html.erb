<p id="notice"><%= notice %></p>

<div class="row">
  <h3><%= @user.nick %></h3>
  <%= image_tag @user.profile_photo.url(:avatar), :class => "img-polaroid" %>
  <%= render 'shared/stats' %>
  <div>
    <%= render 'follow_form' if signed_in? %>
    <% unless @user == current_user %>
      <button class="btn btn-large"><%= link_to 'Send Message', new_user_message_path(@user) %></button>
    <% end %>
  </div>
</div>
<div class="row">
  <% if @user.albums.any? %>
    <h4> Record Collection (<%= @user.albums.count %>)</h4>
    <ol class="posts">
      <%= render @albums %>
    </ol>
    <%= will_paginate @albums %>
  <% end %>
</div>

<div class="row">
  <% if @user.posts.any? %>
    <h4> Posts (<%= @user.posts.count %>)</h4>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
  <% end %>
</div>


