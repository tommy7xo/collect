<%= form_for(@user) do |f| %>
  <div class="row">
    <div class="span6 offset3">
      
      <%= render 'shared/error_messages', object: f.object %>

      <div class="field">
        <%= f.label :nick %><br>
        <%= f.text_field :nick %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :location %><br>
        <%= f.text_field :location %>
      </div>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :country %><br>
        <%= f.text_field :country %>
      </div>
      <div class="field">
        <%= f.label :about %><br>
        <%= f.text_area :about %>
      </div>
      <div class="field">
        <%= f.label :age %><br>
        <%= f.text_field :age %>
      </div>
      <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "Confirmation" %><br>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= f.file_field :profile_photo %>

      <div class="actions">
        <%= f.submit "Send", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
