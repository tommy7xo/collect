<li id="<%= feed_item.id %>">
	<div class="row">
		<div class="span1">
			<%= image_tag feed_item.user.profile_photo.url(:small_avatar) %>
		</div>
		<div class="span7">
  		<h5><%= link_to feed_item.user.nick, feed_item.user %></h5>
  		<span class="content"><%= feed_item.content %></span>
  		<span class="timestamp"> Posted <%= time_ago_in_words(feed_item.created_at) %> ago. </span>
			<% if current_user?(feed_item.user) %>
  			<%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.content %>
			<% end %>
		</div>
	</div>
</li>