<%= form_for(@post) do |f| %>  
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_area :content, :style => "width: 250px; height: 150px;", placeholder: "Make a post..." %>
  </div>
  
  <div class="actions">
    <%= f.submit "Post", class: "btn btn-primary" %>
  </div>
<% end %>
