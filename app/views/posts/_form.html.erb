<%= form_for(@post) do |f| %>
    
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, placeholder: "Make a post..." %>
  </div>
  
  <div class="actions">
    <%= f.submit "Post", class: "btn btn-primary" %>
  </div>
<% end %>
