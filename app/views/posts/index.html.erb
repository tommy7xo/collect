<h1>All Posts:</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>User ID</th>
      <th>User</th>
      <th>Content</th>
      <th>Settings</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.created_at.strftime("%d/%b/%Y") %></td>
        <td><%= post.user_id %></td>
        <td><%= post.user.nick %></td>
        <td><%= post.content %></td>
        <td>
          <button class="btn btn-mini btn-block"><%= link_to 'Show', post %></button>
          <button class="btn btn-mini btn-block"><%= link_to 'Edit', edit_post_path(post) %></button>
          <button class="btn btn-mini btn-block"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin? %>
  <button class="btn"><%= link_to 'Back to Admin Panel', admin_path %></button>
<% end %>
