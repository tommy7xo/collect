<li>
	<div class="row">
		<div class="span1">
			<%= image_tag post.user.profile_photo.url(:small_avatar) %>
		</div>
		<div class="span11">
  		<span class="content"><%= post.content %></span>
  		<span class="timestamp">
    		Posted <%= time_ago_in_words(post.created_at) %> ago by <%= link_to post.user.nick, post.user %>
  		</span>
  		<% if current_user?(post.user) %>
    		<%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" }, title: post.content %>
  		<% end %>
  	</div>
  </div>
</li>